<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    tools:context=".ui.GameFragment">
    <ImageButton
        android:id="@+id/beginGame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_skip_previous_24"
        android:backgroundTint="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/prevMove"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/prevMove"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_baseline_fast_rewind_24"
        android:backgroundTint="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/beginGame"
        app:layout_constraintEnd_toStartOf="@+id/turnIndicator"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/turnIndicator"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/nextMove"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_baseline_fast_forward_24"
        android:backgroundTint="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/turnIndicator"
        app:layout_constraintEnd_toStartOf="@+id/endGame"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/endGame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_skip_next_24"
        android:backgroundTint="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/nextMove"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <FrameLayout
        android:id="@+id/playArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turnIndicator"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/replayDate"
        android:textColor="@color/black"
        android:background="@color/material_dynamic_neutral80"
        android:textSize="16sp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playArea"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/bluePlayerTV"
        android:text=""
        android:textColor="@color/white"
        android:background="#336699"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/redPlayerTV"
        app:layout_constraintTop_toBottomOf="@+id/replayDate"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/redPlayerTV"
        android:text="Player 2"
        android:textColor="@color/white"
        android:background="#990033"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bluePlayerTV"
        app:layout_constraintTop_toBottomOf="@+id/replayDate"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/playPerson"
        android:layout_margin="10dp"
        android:text="Play vs. Person"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playAI"
        app:layout_constraintTop_toBottomOf="@+id/bluePlayerTV"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/playAI"
        android:layout_margin="10dp"
        android:text="Play vs. AI"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playPerson"
        app:layout_constraintTop_toBottomOf="@+id/bluePlayerTV"
        />

    <TextView
        android:id="@+id/chatLine0Me"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="70dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/playPerson"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/black"
        android:id="@+id/chatLine0Them"
        app:layout_constraintTop_toBottomOf="@+id/playPerson"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="70dp"
        android:textColor="@color/black"
        android:id="@+id/chatLine1Me"
        app:layout_constraintTop_toBottomOf="@+id/chatLine0Me"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/black"
        android:id="@+id/chatLine1Them"
        app:layout_constraintTop_toBottomOf="@+id/chatLine0Me"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="70dp"
        android:textColor="@color/black"
        android:id="@+id/chatLine2Me"
        app:layout_constraintTop_toBottomOf="@+id/chatLine1Me"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/black"
        android:id="@+id/chatLine2Them"
        app:layout_constraintTop_toBottomOf="@+id/chatLine1Me"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="70dp"
        android:textColor="@color/black"
        android:id="@+id/chatLine3Me"
        app:layout_constraintTop_toBottomOf="@+id/chatLine2Me"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/black"
        android:id="@+id/chatLine3Them"
        app:layout_constraintTop_toBottomOf="@+id/chatLine2Me"
        />
</androidx.constraintlayout.widget.ConstraintLayout>